{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@main/*": ["main/*"],
      "@common/*": ["common/*"],
      "@renderer/*": ["renderer/*"]
    }
  },
  "include": [
    "src/main/**/*",
    "src/common/**/*",
    "src/renderer/**/*",
    "src/types.d.ts"
  ]
}
