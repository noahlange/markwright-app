{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@main/*": [ "main/*" ],
      "@common/*": [ "common/*" ],
      "@renderer/*": [ "renderer/*" ]
    }
  },
  "include": [
    "src/main/**/*",
    "src/common/**/*",
    "src/renderer/**/*"
  ]
}