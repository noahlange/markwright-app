{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@main/*": ["main/*"],
      "@common": ["common/index.ts"],
      "@common/*": ["common/*"],
      "@preview/*": ["renderer/preview/*"],
      "@editor/*": ["renderer/editor/*"],
      "@utils/*": ["utils/*"],
      "@vendor/*": ["vendor/*"]
    }
  },
  "include": [
    "src/main/**/*",
    "src/common/**/*",
    "src/editor/**/*",
    "src/renderer/**/*",
    "src/preview/**/*",
    "src/types.d.ts",
    "tasks/**/*.js",
    "src/utils/tree.ts"
  ],
  "exclude": ["./src/vendor"]
}
