{
  "name": "Markwright",
  "private": true,
  "version": "0.7.2",
  "author": "Noah Lange <noahrlange@gmail.com>",
  "description": "dead-simple desktop publishing with markdown and sass",
  "main": "public/scripts/main.js",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/highlight.js": "^9.12.3",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.24",
    "@types/node-sass": "^3.10.32",
    "@types/react": "^16.7.4",
    "@types/react-dom": "^16.0.9",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "file-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.5.0",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.16.4",
    "sass-loader": "^7.0.3",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "firacode": "^1.205.0",
    "highlight.js": "^9.14.2",
    "lodash": "^4.17.11",
    "markwright": "noahlange/markwright#devirtualized",
    "monaco-editor": "^0.15.6",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-electron-web-view": "^2.0.1",
    "react-mosaic-component": "^2.0.2",
    "react-promise": "^2.0.3",
    "workly": "^1.2.0",
    "simple-markdown": "^0.4.1"
  },
  "dependencies": {
    "core-decorators": "^0.20.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-store": "^2.0.0",
    "fast-deep-equal": "^2.0.1",
    "hercule": "^4.1.1",
    "js-cache": "^1.0.3",
    "jsonc-parser": "^2.0.1",
    "line-column": "^1.0.2",
    "node-sass": "^4.9.3",
    "panzoom": "^7.1.2",
    "paper-size": "^1.1.0",
    "stream-to-string": "^1.1.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "build": "webpack --config tasks/webpack.config.js",
    "start": "electron .",
    "pretty": "prettier --write 'src/**/*.{ts,tsx}'",
    "types": "tsc",
    "lint": "tslint --fix -c tslint.json 'src/**/*.{ts,tsx}'",
    "rebuild": "./tasks/sass.sh",
    "dist": "cross-env NODE_ENV=production npm run build && build"
  },
  "build": {
    "asarUnpack": [
      "public/workers/*",
      "public/styles/*"
    ],
    "npmRebuild": false,
    "appId": "com.noahlange.markwright",
    "productName": "Markwright",
    "directories": {
      "output": "dist",
      "buildResources": "public/static"
    },
    "fileAssociations": {
      "ext": "mw",
      "name": "Markwright document",
      "role": "Editor"
    },
    "files": [
      "public",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": "dmg",
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
