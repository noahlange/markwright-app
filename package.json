{
  "name": "Markwright",
  "private": true,
  "version": "0.7.2",
  "author": "Noah Lange <noahrlange@gmail.com>",
  "description": "dead-simple desktop publishing with markdown and sass",
  "main": "public/scripts/main.js",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/debounce": "^1.2.0",
    "@types/highlight.js": "^9.12.3",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.21",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^7.1.1",
    "@types/redux-promise": "^0.5.28",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "autoprefixer": "^9.3.1",
    "ava": "^3.3.0",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "debounce": "^1.2.0",
    "electron": "^18.3.7",
    "electron-builder": "^21.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "fast-deep-equal": "^3.1.1",
    "file-loader": "^4.2.0",
    "firacode": "^1.205.0",
    "highlight.js": "^9.14.2",
    "markwright": "noahlange/markwright#virtualized",
    "mini-css-extract-plugin": "^0.8.0",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "nyc": "^14.1.1",
    "postcss-loader": "3",
    "prettier": "^1.19.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-monaco-editor": "^0.29.0",
    "react-mosaic-component": "^3.2.0",
    "react-pan-and-zoom-hoc": "^2.1.8",
    "react-promise": "^2.0.3",
    "react-redux": "^7.1.0",
    "react-shadow": "^17.1.3",
    "react-window": "^1.5.1",
    "redux": "^4.0.4",
    "redux-promise": "^0.6.0",
    "sass-loader": "^7.2.0",
    "simple-markdown": "^0.5.1",
    "source-map-loader": "^0.2.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "workly": "^1.2.0"
  },
  "dependencies": {
    "core-decorators": "^0.20.0",
    "electron-store": "^4.0.0",
    "hercule": "^4.1.1",
    "js-cache": "^1.0.3",
    "jsonc-parser": "^2.0.1",
    "line-column": "^1.0.2",
    "paper-size": "^1.1.0",
    "sass": "^1.25.0",
    "shortid": "^2.2.15",
    "stream-to-string": "^1.1.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "pretty": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "types": "tsc",
    "start": "electron .",
    "build": "webpack --config tasks/webpack.config.js",
    "dist": "cross-env NODE_ENV=production npm run build && electron-builder"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript"
  },
  "ava": {
    "compileEnhancements": true,
    "files": [
      "src/test/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "build": {
    "asarUnpack": [
      "public/workers/*",
      "public/styles/*"
    ],
    "npmRebuild": false,
    "appId": "com.noahlange.markwright",
    "productName": "Markwright",
    "directories": {
      "output": "dist",
      "buildResources": "public/static"
    },
    "fileAssociations": {
      "ext": "mw",
      "name": "Markwright document",
      "role": "Editor"
    },
    "files": [
      "public",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": "dmg",
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
